@page "/fetchdata"
@using AtCoderHeuristicDeck.Core
@inject HttpClient Http

<PageTitle>レーティング取得テスト</PageTitle>

<h1>レーティング取得テスト</h1>

@if (statistics == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <p>@statistics.UserName</p>
    <p>@statistics.Rating</p>
    <table class="table">
        <thead>
            <tr>
                <th>perf</th>
                <th>contest</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var perf in statistics.ExtendedPerformances.Performances)
            {
                <tr>
                    <td>@perf.Value</td>
                    <td>@perf.ContestName</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Statistics? statistics;

    protected override async Task OnInitializedAsync()
    {
        statistics = await Http.GetFromJsonAsync<Statistics>("api/user/terry_u16");
    }
}
